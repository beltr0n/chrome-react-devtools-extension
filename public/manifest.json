{
  "name": "ACS Communications Monitor",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "description": "A DevTools extension to display Communications Monitor.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "icons/acs16x16.png",
    "32": "icons/acs32x32.png",
    "48": "icons/acs48x48.png",
    "128": "icons/acs128x128.png"
  },
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "./static/js/background.js",
    "type": "module"
  },
  "externally_connectable": {
      "matches": ["*://localhost/*"]
  }
}
